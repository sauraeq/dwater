<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".receipt.ReceiptActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="#1b69a9"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/recipet_back"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            app:srcCompat="@drawable/back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:gravity="center"
            android:text="Details"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp"></TextView>


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

     <LinearLayout
         android:layout_marginTop="@dimen/_5sdp"
         android:layout_width="match_parent"
         android:layout_marginHorizontal="@dimen/_5sdp"
         android:layout_height="wrap_content"
         android:orientation="vertical">
         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

             <TextView
                 android:id="@+id/status"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentEnd="true"
                 android:layout_gravity="end"
                 android:layout_marginStart="@dimen/_5sdp"
                 android:layout_marginTop="@dimen/_5sdp"
                 android:layout_marginEnd="@dimen/_5sdp"
                 android:layout_marginBottom="@dimen/_5sdp"
                 android:background="@drawable/blueroundborder"
                 android:gravity="end"
                 android:paddingHorizontal="@dimen/_15sdp"
                 android:paddingVertical="@dimen/_5sdp"
                 android:text="Status"
                 android:textColor="@color/white"
                 android:textSize="@dimen/_12sdp" />

         </RelativeLayout>
         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"

             android:layout_marginTop="@dimen/_15sdp">

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Order ID"
                 android:textColor="@color/black"
                 android:textSize="@dimen/_13sdp" />

             <TextView
                 android:id="@+id/txt_orderid"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentEnd="true"
                 android:text="12345678"
                 android:textColor="@color/black"

                 android:textSize="@dimen/_13sdp" />

         </RelativeLayout>

         <View
             android:layout_width="match_parent"
             android:layout_height="3dp"
             android:layout_marginTop="@dimen/_5sdp"
             android:background="@color/main_gray" />

         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"

             android:layout_marginTop="@dimen/_5sdp">

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Customer Name"
                 android:textColor="@color/black"
                 android:textSize="@dimen/_13sdp" />

             <TextView
                 android:id="@+id/txt_customername"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentEnd="true"
                 android:text=""
                 android:textColor="@color/black"

                 android:textSize="@dimen/_13sdp" />

         </RelativeLayout>

         <View
             android:layout_width="match_parent"
             android:layout_height="3dp"

             android:layout_marginTop="@dimen/_5sdp"
             android:background="@color/main_gray" />

         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"

             android:layout_marginTop="@dimen/_5sdp">

             <TextView
                 android:id="@+id/textdata"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Address:"
                 android:textColor="@color/black"
                 android:textSize="@dimen/_13sdp" />

             <TextView
                 android:layout_marginStart="@dimen/_5sdp"
                 android:id="@+id/txt_address"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_toEndOf="@+id/textdata"
                 android:text="12345678"
                 android:textColor="@color/black"

                 android:textSize="@dimen/_13sdp" />

         </RelativeLayout>

         <View
             android:layout_width="match_parent"
             android:layout_height="3dp"

             android:layout_marginTop="@dimen/_5sdp"
             android:background="@color/main_gray" />



         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"

             android:layout_marginTop="@dimen/_5sdp">

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Phone"
                 android:textColor="@color/black"
                 android:textSize="@dimen/_13sdp" />

             <TextView
                 android:id="@+id/txt_phone"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentEnd="true"
                 android:text="12345678"
                 android:textColor="@color/black"

                 android:textSize="@dimen/_13sdp" />

         </RelativeLayout>

         <View
             android:layout_width="match_parent"
             android:layout_height="3dp"

             android:layout_marginTop="@dimen/_5sdp"
             android:background="@color/main_gray" />
         <androidx.recyclerview.widget.RecyclerView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:id="@+id/taskdetailsrecycle"
             android:layout_marginTop="@dimen/_5sdp"/>
         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"

             android:layout_marginTop="@dimen/_15sdp">

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Gross Amount"
                 android:textColor="@color/black"
                 android:textSize="@dimen/_13sdp" />

             <TextView
                 android:id="@+id/txt_grossammount"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentEnd="true"
                 android:text="AED 256"
                 android:textColor="@color/black"

                 android:textSize="@dimen/_13sdp" />

         </RelativeLayout>

         <View
             android:layout_width="match_parent"
             android:layout_height="3dp"
             android:layout_marginTop="@dimen/_5sdp"
             android:background="@color/main_gray" />

         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="@dimen/_5sdp">

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="VAT"
                 android:textColor="@color/black"
                 android:textSize="@dimen/_13sdp" />

             <TextView
                 android:id="@+id/txt_vat"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentEnd="true"
                 android:text="AED 256"
                 android:textColor="@color/black"

                 android:textSize="@dimen/_13sdp" />

         </RelativeLayout>

         <View
             android:layout_width="match_parent"
             android:layout_height="3dp"
             android:layout_marginTop="@dimen/_5sdp"
             android:background="@color/main_gray" />

         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="@dimen/_5sdp">

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Total"
                 android:textColor="@color/black"
                 android:textSize="@dimen/_13sdp" />

             <TextView
                 android:id="@+id/txt_total"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentEnd="true"
                 android:text="AED 256"
                 android:textColor="@color/black"

                 android:textSize="@dimen/_13sdp" />

         </RelativeLayout>

         <View
             android:layout_width="match_parent"
             android:layout_height="3dp"
             android:layout_marginTop="@dimen/_5sdp"
             android:background="@color/main_gray" />


     </LinearLayout>
    </ScrollView>

</LinearLayout>