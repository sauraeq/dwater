<?xml version="1.0" encoding="utf-8"?>
  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:elevation="@dimen/_10sdp"
    android:id="@+id/constrain_grid"
    android:layout_height="wrap_content"> <!--220dp-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/item_name"
                android:layout_width="match_parent"
                android:text="asdjb"
                android:layout_weight="1"
                android:padding="5dp"
                android:gravity="center_vertical"
                android:layout_height="match_parent">

            </TextView>

            <View
                android:layout_width="1dp"
                android:background="@color/black"
                android:layout_height="match_parent">

            </View>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/current_stock"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent">

            </TextView>

            <View
                android:layout_width="1dp"
                android:background="@color/black"
                android:layout_height="match_parent">

            </View>

        </LinearLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/new_stock"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent">

            </TextView>

            <View
                android:layout_width="1dp"
                android:background="@color/black"
                android:layout_height="match_parent">

            </View>

        </LinearLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_height="45dp">

            <TextView
                android:id="@+id/accepted"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:visibility="gone"
                android:text="Accepted"
                android:gravity="center"
                android:layout_height="match_parent">

            </TextView>

            <Button
                android:id="@+id/accept"
                android:layout_width="0dp"
                android:text="Accept"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="10sp"
                android:layout_weight="1"
                android:layout_height="45dp">

            </Button>

        </LinearLayout>












    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_height="1dp">

    </View>

    <androidx.cardview.widget.CardView
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_margin="@dimen/_10sdp"
        android:layout_width="150dp"
        android:elevation="@dimen/_10sdp"
        android:layout_height="wrap_content"> <!--220dp-->

        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imagepictire"
                android:scaleType="fitXY"
                android:visibility="gone"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_110sdp"
                android:background="@color/bottel_color"
                app:srcCompat="@drawable/bottal" />

            <TextView
                android:layout_marginTop="@dimen/_5sdp"
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:text="AI in Bottol Drinking" />

            <TextView
                android:layout_marginTop="@dimen/_3sdp"
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/main"
                android:textSize="@dimen/_11sdp"
                android:text="AED 190.00" />

            <TextView
                android:layout_marginTop="@dimen/_3sdp"
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/main"
                android:textSize="@dimen/_11sdp"
                android:text="QTY 250" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_accpet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp"
                    android:text="ACCEPT" />

                <ImageView
                    android:id="@+id/dobule"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_double_arrow_24"/>

            </LinearLayout>

            <View
                android:id="@+id/viewwww"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:background="@color/black"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
