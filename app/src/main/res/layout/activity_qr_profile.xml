<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#EFE7E7"
   >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1b69a9"
        android:layout_marginBottom="50dp"
        android:orientation="horizontal"
        >


        <ImageView
            android:id="@+id/racipt_back"
            android:layout_gravity="center_vertical"
            android:layout_width="25dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:text=""
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/_15sdp"></TextView>

    </LinearLayout>

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/imageView7"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_90sdp"
        android:layout_gravity="center"
        android:layout_marginBottom="-50dp"
        android:src="@drawable/profilemen"
        app:civ_border_width="4dp"
        app:civ_shadow_radius="@dimen/_8sdp" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/driver_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Imran Khan"
            android:layout_marginTop="@dimen/_50sdp"
            android:gravity="center_horizontal"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/_15sdp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Imran Khan"
            android:id="@+id/driver_id"
            android:gravity="center_horizontal"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/_15sdp"
            />





        <ImageView
            android:layout_marginTop="@dimen/_10sdp"
            android:id="@+id/idIVQrcode"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_200sdp"
            android:layout_marginBottom="50dp"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>


</LinearLayout>